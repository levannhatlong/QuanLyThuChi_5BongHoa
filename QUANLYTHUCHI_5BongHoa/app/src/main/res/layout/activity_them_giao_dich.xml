<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mau_nen_sang"
    tools:context=".ThemGiaoDichActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/mau_chu_dao">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="GIAO DỊCH MỚI"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_cancel"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/bieu_tuong_huy"
                    app:tint="@color/white"
                    android:layout_marginEnd="16dp" />

                <ImageView
                    android:id="@+id/iv_reset"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/bieu_tuong_dat_lai"
                    app:tint="@color/white"/>
            </LinearLayout>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/radio_tien_ra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền ra"
                    android:textColor="@color/mau_chu_toi"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/radio_tien_vao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền vào"
                    android:textColor="@color/mau_chu_toi"
                    android:layout_marginStart="16dp"/>
            </RadioGroup>

            <Spinner
                android:id="@+id/spinner_the_loai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/edit_ten_giao_dich"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên giao dịch *"
                android:textColor="@color/mau_chu_toi"
                android:textColorHint="@color/mau_chu_phu"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/edit_so_tien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Số tiền giao dịch *"
                android:inputType="numberDecimal"
                android:textColor="@color/mau_chu_toi"
                android:textColorHint="@color/mau_chu_phu"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/edit_ngay_giao_dich"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ngày giao dịch *"
                android:focusable="false"
                android:textColor="@color/mau_chu_toi"
                android:textColorHint="@color/mau_chu_phu"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/edit_ghi_chu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ghi chú"
                android:gravity="top"
                android:lines="3"
                android:textColor="@color/mau_chu_toi"
                android:textColorHint="@color/mau_chu_phu"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Đính kèm hình ảnh/hóa đơn"
                android:gravity="center"
                android:textColor="@color/mau_chu_phu"
                android:background="@drawable/vien_net_dut"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="16dp"
        android:src="@drawable/bieu_tuong_luu"
        app:backgroundTint="@color/mau_chu_dao"
        app:tint="@color/white"
        app:fabSize="normal" />

</LinearLayout>
