<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4DB6AC"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <!-- Top Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"

                android:contentDescription="Signal" />
        </RelativeLayout>

        <!-- Back Button and Title -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Cài đặt - Chọn nhóm giao dịch chi tiêu"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Tab Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/tabChiTieu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chi tiêu"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:background="@drawable/tab_selected" />

            <TextView
                android:id="@+id/tabThuNhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thu nhập"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:background="@drawable/tab_unselected" />
        </LinearLayout>
    </LinearLayout>

    <!-- Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Thực phẩm -->
            <LinearLayout
                android:id="@+id/btnThucPham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/category_item_bg"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_thuc_pham"
                    android:contentDescription="Thực phẩm" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Thực phẩm"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Chế độ ăn -->
            <LinearLayout
                android:id="@+id/btnCheDoAn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/category_item_bg"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_che_do_an"
                    android:contentDescription="Chế độ ăn" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Chế độ ăn"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Di chuyển -->
            <LinearLayout
                android:id="@+id/btnDiChuyen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/category_item_bg"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_di_chuyen"
                    android:contentDescription="Di chuyển" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Di chuyển"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Thời trang -->
            <LinearLayout
                android:id="@+id/btnThoiTrang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/category_item_bg"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_thoi_trang"
                    android:contentDescription="Thời trang" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Thời trang"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Chế độ dinh dưỡng thức uống -->
            <LinearLayout
                android:id="@+id/btnCheDoThucUong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/category_item_bg"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_fashtion"
                    android:contentDescription="Thức uống" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Chế độ dinh dưỡng thức uống"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Dịch vụ thú y -->
            <LinearLayout
                android:id="@+id/btnDichVuThuY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/category_item_bg"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_thu_y"
                    android:contentDescription="Dịch vụ thú y" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Dịch vụ thú y"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Giáo dục -->
            <LinearLayout
                android:id="@+id/btnGiaoDuc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/category_item_bg"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_giao_duc"
                    android:contentDescription="Giáo dục" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Giáo dục"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Thêm mới nhóm phân loại -->
            <Button
                android:id="@+id/btnThemMoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Thêm mới nhóm phân loại"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:background="@drawable/add_button_bg"
                android:padding="16dp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>