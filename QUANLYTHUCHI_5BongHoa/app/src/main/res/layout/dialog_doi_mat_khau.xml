<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Mật khẩu cũ -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khẩu hiện tại"
        android:textSize="13sp"
        android:textColor="#666666"
        android:layout_marginBottom="6dp" />

    <EditText
        android:id="@+id/edtMatKhauCu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_text"
        android:padding="14dp"
        android:hint="Nhập mật khẩu hiện tại"
        android:textSize="15sp"
        android:textColor="#333333"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp" />

    <!-- Mật khẩu mới -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khẩu mới"
        android:textSize="13sp"
        android:textColor="#666666"
        android:layout_marginBottom="6dp" />

    <EditText
        android:id="@+id/edtMatKhauMoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_text"
        android:padding="14dp"
        android:hint="Nhập mật khẩu mới (ít nhất 6 ký tự)"
        android:textSize="15sp"
        android:textColor="#333333"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp" />

    <!-- Xác nhận mật khẩu -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận mật khẩu mới"
        android:textSize="13sp"
        android:textColor="#666666"
        android:layout_marginBottom="6dp" />

    <EditText
        android:id="@+id/edtXacNhanMatKhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_text"
        android:padding="14dp"
        android:hint="Nhập lại mật khẩu mới"
        android:textSize="15sp"
        android:textColor="#333333"
        android:inputType="textPassword" />

</LinearLayout>
