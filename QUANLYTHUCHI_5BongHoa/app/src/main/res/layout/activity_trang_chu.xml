<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F7FA"
    android:fitsSystemWindows="true"
    tools:context=".TrangChuActivity">

    <!-- TOOLBAR WITH GRADIENT -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:paddingTop="40dp"
        android:paddingBottom="20dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/iv_notification"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_notification"
            app:tint="@color/white"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xin chào"
                android:textColor="#B3E5FC"
                android:textSize="15sp"
                android:letterSpacing="0.05"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5BongHoa"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_settings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_settings"
            app:tint="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- CARD SỐ DƯ -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="24dp"
                    android:weightSum="2">

                    <!-- CHI TIÊU -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#FFEBEE"
                        android:padding="20dp"
                        android:layout_marginEnd="6dp"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="#FFCDD2"
                            android:gravity="center"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="↓"
                                android:textSize="24sp"
                                android:textColor="#E53935"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chi tiêu"
                            android:textSize="13sp"
                            android:textColor="#666"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/tv_tien_chi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5,300,000"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#E53935"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VND"
                            android:textSize="11sp"
                            android:textColor="#999"
                            android:layout_marginTop="2dp"/>

                    </LinearLayout>

                    <!-- THU NHẬP -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#E8F5E9"
                        android:padding="20dp"
                        android:layout_marginStart="6dp"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="#C8E6C9"
                            android:gravity="center"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="↑"
                                android:textSize="24sp"
                                android:textColor="#43A047"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thu nhập"
                            android:textSize="13sp"
                            android:textColor="#666"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/tv_tien_thu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30,000,000"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#43A047"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VND"
                            android:textSize="11sp"
                            android:textColor="#999"
                            android:layout_marginTop="2dp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- BIỂU ĐỒ -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Biểu đồ thu chi"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#263238"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="• Tháng này"
                            android:textSize="12sp"
                            android:textColor="#2196F3"/>

                    </LinearLayout>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/line_chart"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- MENU CHỨC NĂNG -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="24dp">

                <!-- VÍ TIỀN -->
                <LinearLayout
                    android:id="@+id/btn_vi_tien"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:padding="20dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="#E3F2FD"
                        android:gravity="center"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_wallet"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ví tiền"
                        android:textSize="14sp"
                        android:textColor="#263238"
                        android:textStyle="bold"/>

                </LinearLayout>

                <!-- THÊM GIAO DỊCH -->
                <LinearLayout
                    android:id="@+id/btn_them_giao_dich"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#E3F2FD"
                    android:padding="20dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="4dp">

                    <LinearLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="#1976D2"
                        android:gravity="center"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_add"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thêm giao dịch"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textStyle="bold"/>

                </LinearLayout>

                <!-- THỐNG KÊ -->
                <LinearLayout
                    android:id="@+id/btn_thong_ke"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@android:color/white"
                    android:padding="20dp"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="#E3F2FD"
                        android:gravity="center"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_chart"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thống kê"
                        android:textSize="14sp"
                        android:textColor="#263238"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

            <!-- GIAO DỊCH GẦN ĐÂY -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Giao dịch gần đây"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#263238"/>

                        <TextView
                            android:id="@+id/tv_chi_tiet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chi tiết"
                            android:textSize="14sp"
                            android:textColor="#2196F3"
                            android:textStyle="bold"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:background="#E3F2FD"/>

                        <TextView
                            android:id="@+id/tv_theo_nhap"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thu nhập"
                            android:textSize="14sp"
                            android:textColor="#666"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:layout_marginStart="8dp"/>

                    </LinearLayout>

                    <!-- DANH SÁCH GIAO DỊCH -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_giao_dich"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>